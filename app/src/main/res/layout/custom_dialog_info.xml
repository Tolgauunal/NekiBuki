<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffc05f"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF826C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/custom_dialog_info_imageViewClose"
            android:gravity="center"
            android:text="Nasıl Oynanır ?"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/custom_dialog_info_imageViewClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_close"></ImageView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/play_activity_cardViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#FF826C"
        app:cardCornerRadius="25dp"
        app:cardElevation="3dp"
        app:contentPadding="15dp">

        <ImageView
            android:id="@+id/custom_dialog_info_imageviewGoToInstagram"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/insta"></ImageView>

        <TextView
            android:id="@+id/play_activity_textViewQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Oyunumuzun mantığı çok basit verilen soruları doğru şekilde cevaplayan herkes +10 paun kazanır üst üste 10 doğru cevap verenler ise +100 puan elde eder. Ay sonunda Liderlik Sıralamasında ilk 3'e girenler süpriz hediyeleri kazanacaktır. Detaylı bilgi için instagram hesabımızı takip etmeyi unutmayın.\nİyi Oyunlar Dileriz :)"
            android:textAlignment="viewStart"
            android:textColor="#FFFF"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FF826C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

</LinearLayout>