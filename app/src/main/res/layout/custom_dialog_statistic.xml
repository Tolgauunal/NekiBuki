<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffc05f"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF826C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/custom_dialog_statistic_imageViewClose"
            android:gravity="center"
            android:text="İstatistik Tablosu"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/custom_dialog_statistic_imageViewClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_close"></ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Toplam Kelime Sayısı: "
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"></TextView>

    <ProgressBar
        android:id="@+id/custom_dialog_statistic_processBarWordCount"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:min="0"
        android:theme="@style/progressBar"
        ></ProgressBar>

    <TextView
        android:id="@+id/custom_dialog_statistic_textViewWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:text="0/10 "
        android:textColor="@color/white"
        android:textSize="17sp"></TextView>
    /!-- Toplam Soru Sayısı -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Toplam Yanlış Tahmin Sayısı: "
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"></TextView>

    <ProgressBar
        android:id="@+id/custom_dialog_statistic_processBarFalseGuessCount"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:min="0"
        android:theme="@style/progressBar"
       ></ProgressBar>

    <TextView
        android:id="@+id/custom_dialog_statistic_textViewFalseGuessCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:text="0/10 "
        android:textColor="@color/white"
        android:textSize="17sp"></TextView>

    <LinearLayout
        android:id="@+id/custom_dialog_statistic_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/custom_dialog_statisticTable_btnMainMenu"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_round_settings"
            android:padding="10dp"
            android:text="Ana Menüye Dön"
            android:textColor="#FFFF"
            android:textSize="15sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/custom_dialog_statisticTable_PlayAganin"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_round_settings"
            android:padding="10dp"
            android:text="Tekrar Oyna"
            android:textColor="#FFFF"
            android:textSize="15sp"
            android:textStyle="bold"></Button>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FF826C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
</LinearLayout>